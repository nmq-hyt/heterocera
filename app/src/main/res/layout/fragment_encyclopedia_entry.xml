<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Heterocera"
    >

    <ImageView
        android:id="@+id/encyclopedia_entry_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/angle_shades"
        android:theme="@style/Theme.Heterocera"
        style="@style/TextViewHeterocera"/>
        />

    <TextView
        android:id="@+id/encyclopedia_entry_formal_view"
        style="@style/TextViewHeterocera"
        android:layout_width="179dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:translationX="200dp"
        android:translationY="100dp" />

    <TextView
        android:id="@+id/encyclopedia_entry_common_name"
        style="@style/TextViewHeterocera"
        android:layout_width="177dp"
        android:layout_height="100dp"
        android:gravity="center"

        android:text="Angle Shades"

        android:translationX="200dp" />


    <TextView
        android:id="@+id/encyclopedia_entry_description"
        style="@style/TextViewHeterocera"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:enabled="true"
        android:gravity="top"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="This species has a wingspan of 45â€“52 mm and the forewings are very distinctively shaped with a sharply pointed apex. The common name is derived from the characteristic markings on the forewings: the base colour is buffish, brown towards the termen, and is marked with a bold V-shaped pink-and-green marking. Despite this bright colouring, the angular markings provide excellent disruptive patterning camouflage. The hindwings are whitish with darker venation. "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:translationY="200dp" />



</FrameLayout>
