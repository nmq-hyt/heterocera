<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Heterocera"
    android:background="@color/colorPrimaryDark"
    >

    <ImageView
        android:id="@+id/observation_capture_view"
        android:layout_width="198dp"
        android:layout_height="184dp"
        android:scaleType="fitXY"
        app:srcCompat="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/date_text_view"
        style="@style/TextViewHeterocera"
        android:layout_width="211dp"
        android:layout_height="102dp"
        android:textColor="@color/white"
        android:translationX="200dp" />

    <TextView
        android:id="@+id/latlng_text_view"
        style="@style/TextViewHeterocera"
        android:layout_width="211dp"
        android:layout_height="84dp"
        android:textColor="@color/white"
        android:translationX="200dp"
        android:translationY="100dp" />

    <TextView
        android:id="@+id/suggestedTextView"
        style="@style/TextViewHeterocera"
        android:layout_width="181dp"
        android:layout_height="86dp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/white"
        android:translationY="185dp" />

    <TextView
        style="@style/TextViewHeterocera"
        android:layout_width="211dp"
        android:layout_height="86dp"

        android:maxLines="5"
        android:text="@string/moth_species_spinner_info"
        android:textColor="@color/white"
        android:textSize="8pt"
        android:translationX="180dp"
        android:translationY="185dp" />

    <EditText
        android:id="@+id/observation_description"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:enabled="true"
        android:gravity="top"
        android:textColor="@color/white"
        android:hint="Enter your observation description here."
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:translationY="335dp"
        style="@style/TextViewHeterocera"/>

    <Spinner
        android:id="@+id/common_name_spinner"
        style="@style/TextViewHeterocera"
        android:layout_width="211dp"
        android:layout_height="65dp"
        android:textColor="@color/white"
        android:translationX="180dp"
        android:translationY="270dp" />

    <Button
        android:id="@+id/submit_observation"
        style="@style/TextViewHeterocera"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:clickable="true"
        android:text="Submit observation"
        android:translationY="500dp"
        app:icon="@android:drawable/ic_menu_upload" />

</FrameLayout>