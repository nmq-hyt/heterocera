<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   style="@style/Theme.Heterocera"

    >

    <ImageView
        android:id="@+id/observation_detail_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:srcCompat="?attr/selectableItemBackground"
       style="@style/TextViewHeterocera"/>

    <TextView
        android:id="@+id/observation_formal_view"
        android:layout_width="215dp"
        android:layout_height="100dp"
        android:translationX="200dp"
        android:translationY="100dp"
       style="@style/TextViewHeterocera"/>

    <TextView
        android:id="@+id/observation_moth_common_name"
        android:layout_width="215dp"
        android:layout_height="100dp"
        android:translationX="200dp"
       style="@style/TextViewHeterocera"/>

    <TextView
        android:id="@+id/observation_gps_text_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:translationY="200dp"
       style="@style/TextViewHeterocera"/>

    <TextView
        android:id="@+id/observation_description"
        style="@style/TextViewHeterocera"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:enabled="true"
        android:gravity="top"
        android:singleLine="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:translationY="300dp" />


</FrameLayout>
